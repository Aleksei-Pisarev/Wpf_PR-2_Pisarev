<Window x:Class="Wpf_PR_2_Pisarev.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_PR_2_Pisarev"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu Background="White" BorderBrush="Navy" BorderThickness="1">
            <MenuItem Header="_Файл">
                <MenuItem Header="_Открыть"/>
                <MenuItem Header="_Сохранить"/>

                <CheckBox Content="Предупреждать о несохранении данных при закрытии"/>
                <RadioButton GroupName="codepage" Content="Windows-1251" />
                <RadioButton GroupName="cadepage" Content="koi8-r"/>
                  <RadioButton GroupName="cadepage" Content="UTF-8"/>

                <Separator/>
                <MenuItem Header="_Закрыть"/>
            </MenuItem>
            <MenuItem Header="_О программе"/>
        </Menu>
     </Grid>
</Window>
